@using PMIS.ViewModels
@model PatientMedicalRecordDetailsViewModel

@Html.HiddenFor(m => m.PatientId, new { @id = "patientid" })
@Html.HiddenFor(m => m.PhyId, new { @id = "phyid" })

@Html.HiddenFor(m=>m.Patient.DoB,new {@id= "patient-info" })

<div class="container-fluid">
    <div class="row">
        <div class="col-lg">
            <div class="card card-fullheight">
                <div class="card-header">
                    <h3 class="card-title">Medical History: <span class="patient-header">@($"{Model.Patient.Lastname},{Model.Patient.Firstname}")</span> </h3>
                   
                    <div class="card-tools">
                        <button class="btn btn-info btn-sm" type="button" id="addActivity"><i class="fas fa-plus"></i>Add Activity </button>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">

                        <div class="col-12 col-md-12 col-lg-4 order-2 order-md-1">


                            <div class="card bg-light mr-2">
                                <div class="card-header text-muted pb-0 border-bottom-0">
                                    <h6 style="display: inline-block">Record#: <span class="text-danger" style="font-size:22px;">@Model.PatientId</span> </h6>
                                </div>
                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-8">
                                            <h2 class="lead">@($"{Model.Patient.Lastname},{Model.Patient.Firstname}")</h2>
                                           
                                            <ul class="ml-4 mb-0 mt-2 fa fa-ul mb-4 text-muted">
                                                <li class="small my-1" id="patientinfo-age">
                                                    <span class="fa fa-li"><i class="fas fa-mdb fa-star"></i></span>@(Model.Patient.DoB?.ToString("yyyy MMMM dd") ?? String.Empty) ( <span class="d-inline-block text-bold" id="get-age"></span> yrs. )
                                                </li>
                                                <li class="small my-1"><span class="fa fa-li"><i class="fas fa-mdb fa-stamp"></i></span>@($"{Model.Patient.CivilStat}")</li>

                                                <li class="small my-1"><span class="fa fa-li"><i class="fas fa-mdb fa-street-view"></i></span> @($"{Model.Patient.AddStreetBrgy},{Model.Patient.Muncity},{Model.Patient.Province}")</li>
                                                <li class="small my-1">
                                                    <span class="fa fa-li"><i class="fas fa-mdb fa-phone"></i></span>
                                                    @{
                                                        if ( !String.IsNullOrEmpty(Model.Patient.ContactCell) && !String.IsNullOrEmpty(Model.Patient.ContactPhone))
                                                        {
                                                            @($"{Model.Patient.ContactCell} , {Model.Patient.ContactPhone}")
                                                        }
                                                        else
                                                        {
                                                            @Model.Patient.ContactCell;
                                                        }
                                                    }

                                                   
                                                    
                                                </li>
                                            </ul>
                                            
                                            <div class="mt-3">
                                                
                                                <p class="text-muted text-sm my-1"><b>Blood Type: </b>@Model.Patient.BType
                                                </p>
                                                <p class="text-muted text-sm my-1"><b>Height(cm): </b>@Model.Patient.Height
                                                </p>
                                                <p class="text-muted text-sm my-1"><b>Weight(kls): </b>@Model.Patient.Weight
                                                </p>

                                            </div>
                                         
                                            
                                           
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>

                        <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1" id="medicalrecord">

                             
                            @{
                                Html.RenderAction("MedicalHistoryListByPatient",new {@id=Model.PatientId, @phyid=Model.PhyId});
                            }      
                        </div>


                    </div>


                </div>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="modal-createRecord">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create Medical Record</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->



<div class="modal fade" id="modal-createMedication">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create Medication</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->



@section scripts
{
 
    @Scripts.Render("~/Scripts/js_medrecord.js")
}
