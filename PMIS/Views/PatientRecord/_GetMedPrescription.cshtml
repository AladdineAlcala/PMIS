@using PMIS.ViewModels
@model IEnumerable<DocPrescriptionViewModel>



    <table class="table table-striped table-hover table-sm" id="tble-docPrescription">
        <thead>
        <tr>
            <th style="width: 8px";> </th>
            <th style="width: 10px;">#</th>
            <th>Recipe (Rx)</th>
            <th>Signatura (Sig)</th>
            <th style="width:25%;">Dispense</th>
        </tr>
        </thead>
        <tbody>
            @{
                if (Model.Any())
                {

                    var i = 0;
                    foreach (var item in Model)
                    {
                        i += 1;

                        <tr>
                            <td><input type="checkbox" class="form-check-input" name="chkselect" value="@item.PrescNo" /></td>
                            <td>@i</td>
                            <td>@item.PrescriptionDetails</td>
                            <td>
                                @item.Sig
                            </td>
                            <td>
                                @item.DispInst
                            </td>
                        </tr>
                    }

                }
                else{
                    <tr>
                        <td colspan="5" class="text-center"> No Prescription Found</td>
                    </tr>
                }
            }
        

        </tbody>

    </table>
    
