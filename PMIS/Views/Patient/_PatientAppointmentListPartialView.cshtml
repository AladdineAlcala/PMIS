
@using System.Collections
@using PMIS.ViewModels
@model IEnumerable<AppointmentScheduleViewModel>
    

<div class="table-responsive">
    <table class="table table-striped table-sm table-bordered compact nowrap" id="table-appointmentList">
        <thead class="bg-cyan">
        <tr>
            <th></th>
            <th>Date</th>
            <th>Physician</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @{
            if (Model.Any())
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr data-patNo="@item.No">
                        <td>@(item.Iscancelled ? "" : i.ToString())</td>
                        <td>@(item.AppointDate.ToString("yyyy MMMM dd"))</td>


                        <td>@item.PhyName</td>
                        <td>@(item.Iscancelled ? "Cancelled" : item.Stat)</td>

                        <td>
                            <button type="button" class="btn btn-block btn-outline-success btn-flat btn-sm" id="view-medicalinfo"> View </button>
                        </td>
                    </tr>
                    
                    if (item.Iscancelled == false)
                    {
                        i = i + 1;
                    }
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center bg-gradient-danger"> No Appointment Found</td>
                </tr>
            }
        }
       
        </tbody>
    </table>
</div>



