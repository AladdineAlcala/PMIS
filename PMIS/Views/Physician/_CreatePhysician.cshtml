@using PMIS.ViewModels
@model PhysicianDetailsViewModel

<div class="container-fluid">
    
    <div class="alert alert-info alert-dismissible">
        <h6><i class="icon fas fa-info"></i>Note:</h6>
        <p class="text" style="margin-bottom: 0; padding-bottom: 0;">All fields marked with an * are required</p>
    </div>

    @{
        using (Html.BeginForm("CreatePhysician", "Physician", FormMethod.Post, new {role = "form", @id = "create-physician"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(m=>m.PhysId)

            <div class="row">
                <div class="col-lg">
                    <label class="col-sm-2 offset-sm-2 col-form-label">Dr.</label>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label required">Fullname:</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.PhysName, new {@class = "form-control required", @placeholder = " Physician Name"})
                            @Html.ValidationMessageFor(m => m.PhysName, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label required">Initial:</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.PhysAbr, new {@class = "form-control required", @placeholder = "Abbrevaition for Physician's name"})
                            @Html.ValidationMessageFor(m => m.PhysAbr, null, new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 offset-md-4">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="btn-savePhysician">Save </button>
                </div>
            </div>
        }
    }




</div>