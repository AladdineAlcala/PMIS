@using PMIS.ViewModels
@model UserinRoleViewModel

<div class="container-fluid">
    <div class="col-lg">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group row">
                    <div class="form-control-label col-sm-2 d-inline-block">User Role for: </div> <span class="text-left">@Model.username</span>
                </div>
            
            
            </div>
        </div>
        
        
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("AddRoleUser", "Account", FormMethod.Post, new {id = "formaddroletoUser"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m=>m.userId, new { @id = "userId" })
                
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Set Role :</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.selecteduserRole, Model.selectListRoles, null, new {@class = "form-control col-sm-8",id="syncopt"})
                            @Html.ValidationMessageFor(m=>m.selecteduserRole, null, new { @class = "text-danger" })
                        </div>

                     

                    </div>

                    @*<div class="form-group row" id="sncdoc">
                        <label class="col-sm-2 col-form-label">Sync User for Doctor:</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(m => m.selectedPhyId, Model.selectListPhysicians, null, new { @class = "form-control col-sm-8" })
                        </div>



                    </div>*@

                    <div class="col-sm-3 offset-3">
                        <button class="btn bg-blue btn-flat" type="button" id="add_roletouser">Add to Role</button>
                    </div>
                }
            </div>
            
        </div>

    </div>
</div>
