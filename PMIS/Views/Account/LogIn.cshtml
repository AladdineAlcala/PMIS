@using PMIS.ViewModels
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>PMIS Log-in</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->	
    <link rel="icon" type="image/png" href="~/Content/dist/img/PMIS.png"/>
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/animate/animate.css">
    <!--===============================================================================================-->	
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    @*<link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/select2/select2.min.css">*@
    <!--===============================================================================================-->	
    @*<link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/vendor/daterangepicker/daterangepicker.css">*@
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/LoginTemplate/css/main.css">
    <!--===============================================================================================-->
</head>
<body>
	
<div class="limiter" style="color: blueviolet;">
    <div class="container-login100">
        <div class="wrap-login100">
            
            @using (Html.BeginForm("LogIn","Account",new {ReturnUrl=ViewBag.ReturnUrl}, FormMethod.Post,new {@class= "login100-form validate-form" }))
            {
                @Html.AntiForgeryToken()
               


                <span class="login100-form-title p-b-26">
                    PMIS
                </span>
                @*<span class="login100-form-title p-b-26">
                    <i class="zmdi zmdi-hospital"></i>
                </span>*@

                @Html.ValidationSummary(true, "", new { @class = "text-center text-danger mb-3 pb-3" })

                <div class="wrap-input100 validate-input" data-validate="Invalid Username Input">
                  @Html.TextBoxFor(m=>m.Username,new {@class="input100",@type="text",@name="username"})
                    <span class="focus-input100" data-placeholder="Username"></span>
                </div>


                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    @Html.TextBoxFor(m=>m.Password,new {@class="input100",@type="password",@name="pass"})
                    <span class="focus-input100" data-placeholder="Password"></span>
                </div>

                <div class="wrap-input100" style="border-bottom: none;">
                    <div class="icheck-primary">
                        @Html.CheckBoxFor(m=>m.RememberMe,new {@id="remember"})
                        <label for="remember">
                            Remember Me
                        </label>
                    </div>
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>
                </div>

            }
 

        </div>
    </div>
</div>
	

	
<!--===============================================================================================-->
<script src="~/Content/LoginTemplate/vendor/jquery/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
<script src="~/Content/LoginTemplate/vendor/animsition/js/animsition.min.js"></script>
<!--===============================================================================================-->
<script src="~/Content/LoginTemplate/vendor/bootstrap/js/popper.js"></script>
<script src="~/Content/LoginTemplate/vendor/bootstrap/js/bootstrap.min.js"></script>
<!--===============================================================================================-->
@*<script src="~/Content/LoginTemplate/vendor/select2/select2.min.js"></script>*@
<!--===============================================================================================-->
@*<script src="~/Content/LoginTemplate/vendor/daterangepicker/moment.min.js"></script>
<script src="~/Content/LoginTemplate/vendor/daterangepicker/daterangepicker.js"></script>*@
<!--===============================================================================================-->
@*<script src="~/Content/LoginTemplate/vendor/countdowntime/countdowntime.js"></script>*@
<!--===============================================================================================-->
<script src="~/Content/LoginTemplate/js/main.js"></script>

</body>
</html>