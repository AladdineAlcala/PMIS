@using PMIS.ViewModels
@model AppointmentViewModel


<div class="container-fluid">
    <div class="row">

        <div class="col-md-7 col-sm-12">

            <div class="card" style="min-height: 550px;">
                <div class="card-header">
                    <h3 class="card-title">Appointment List </h3> <span class="badge bg-primary ml-2 mb-1" id="appoint-count"> 1 </span>
                    <div class="card-tools">

                        <i class="fal fa-calendar-alt"> </i>

                        <h3 id="appiont-date"> @DateTime.Now.ToString("MMMM dd ,yyyy")</h3>
                    </div>
                </div>
                <div class="card-body pt-1 px-1 table-responsive">
                    <div class="appointinfo-date">
                        <div class="row">
                            <div class="d-flex">
                                @Html.DropDownListFor(m => m.PhysId, Model.PhysicianListItems, "---- Select Doctor ---", new { @class = "form-control mr-1", id = "select-doctor" })
                                <button class="btn btn-info" id="add-appointment"><i class="fal fa-plus"></i> New </button>
                            </div>
                        </div>
                    </div>

                    <table class="table table-striped table-hover table-sm" id="appoint">
                        <thead>
                            <tr>
                                <th style="width: 10%;">#</th>
                                <th style="width: 40%;">Patient Name</th>
                                <th>Status</th>
                                <th style="width: 20%;"></th>
                            </tr>
                        </thead>
                        <tbody id="tableAppoint">
                            @*@{ Html.RenderAction("GetAppointList", "Appointment");}*@
                        </tbody>
                    </table>
                    <div class="alert alert-danger" id="no-rows-alert" style="display: none">Pls. Select Doctor..</div>
                </div>
            </div>
        </div>
    </div>

</div>

<div class="modal fade" id="modal-createAppointment">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h5 class="modal-title">Add Appointment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

<div class="modal fade" id="modal-appointoptions">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h5 class="modal-title"> Appointment Options</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

@section scripts
{
    <script type="text/javascript">

        var appointment = {
            newAppointment: "@Url.Action("CreateAppointment","Appointment")",
            getAppointmentbyDoctorId: "@Url.Action("GetAppointment_By_Doctor","Appointment")"

        }
    </script>

    @Scripts.Render("~/Scripts/js_appointment.js")
}
