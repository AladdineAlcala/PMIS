@using PagedList
@using PagedList.Mvc
@using PMIS.Model
@using PMIS.ViewModels
@model PatientMedicalRecordDetailsViewModel

@Html.HiddenFor(m => m.PatientId, new { @id = "patientid" })
@Html.HiddenFor(m => m.PhyId, new { @id = "phyid" })

@Html.HiddenFor(m => m.Patient.DoB, new { @id = "patient-info" })


<div class="container-fluid">
    <div class="row">
        <div class="col-lg">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Medical History</h3>


                </div>
                <div class="card-body">
                    <div class="row">

                        <!-- insert medical history paging -->

                        <div class="col-12 col-md-12 col-lg-8 order-2 order-md-1" style="margin-bottom: 10px;">

                            <h4 style="text-align:center;margin-bottom:18px;">Recent Activity</h4>

                            <div class="medical-history_container" id="docmedicalrecord">

                                @{
                                    if (Model.MedicalRecordList.Count > 0)
                                    {

                                         Html.RenderPartial("_RecordListPartialView", (PagedList<MedicalRecord>)Model.MedicalRecordList);

                                    }

                                    else
                                    {
                                        <div class="alert alert-info alert-dismissible">
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                            <h5><i class="icon fas fa-info"></i> No Record Found </h5>

                                        </div>
                                    }





                                }


                            </div>



                        </div>




                        <div class="col-md-12 col-lg-4 order-1 order-md-2">

                            @*<h3 class="text-primary"><i class="fas fa-paint-brush"></i> AdminLTE v3</h3>*@

                            @{
                                Html.RenderPartial("_PatientProfile", Model.Patient);
                            }

                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
</div>


