@using PMIS.ViewModels
@model MedicationViewModel

<div class="container-fluid" style="min-height: 350px;">

    @using (Html.BeginForm("UpdateMedication", "PatientMedicalRecord", FormMethod.Post, new { role = "form", id = "form_docUpdateMedication" }))
    {

        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.RecordNo, new { @id = "recNo" })
        @Html.HiddenFor(m => m.operation)

        <div class="row">
            <div class="col-lg">

                <div class="form-group">

                    @Html.TextAreaFor(m => m.Medication, new { @class = "form-control", @id = "compose-medication", rows = "5", style = "resize:none;" })
                </div>


            </div>
        </div>

        <div class="row">
            <div class="col-lg-5 offset-5">
                <button type="submit" class="btn btn-primary" id="update-docmedication"><i class="far fa-envelope"></i> Update </button>
                <button type="reset" class="btn btn-default" id="modalClose"><i class="fas fa-times"></i> Discard</button>

            </div>
        </div>
    }


</div>

