@using PMIS.Model
@model MedicalRecord

<input type="hidden" value="@ViewBag.page" id="currPage"/>

@{
    if (Model != null)
    {
        @Html.HiddenFor(m => m.RecordNo, new {id = "recNo"})

        <div class="card card-primary card-outline">
            <div class="card-header p-2">
                <h3 class="card-title">
                    <i class="nav-icon fal fa-file-medical-alt"> </i>
                    Patient Record
                </h3>
                <div class="card-tools mr-2">

                    <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" id="return_to_list" data-container="body" title="Return to List">
                        <i class="fas fa-reply"></i>
                    </button>
                </div>
            </div>

            <!--card header-->

            <div class="card-body p-0">
                
                <div class="mailbox-read-info pl-2 bg-info">
                    <h5 class="text-white" style="width: 300px;">Subjective: </h5>

                    @*<h6><span class="mailbox-read-info">@Model.RecordDate.Value.ToString("yy-MMM-dd ddd tt")</span></h6>*@
                </div>


                <div class="subjective-message with-border border-bottom">

                    @(new HtmlString(Model.RecordDetails))

                </div>


                <div class="mailbox-read-info pl-2 bg-info">
                    <h5 class="text-white">Current Medication</h5>

                </div>

                <!-- /.mailbox-read-info -->
                <div class="mailbox-controls with-border text-center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-sm" id="medication" data-toggle="tooltip" data-container="body" title="Add Medication">
                            <i class="far fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Reply">
                            <i class="fas fa-reply"></i>
                        </button>
                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Forward">
                            <i class="fas fa-share"></i>
                        </button>
                    </div>
                    <!-- /.btn-group -->
                    <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Print">
                        <i class="fas fa-print"></i>
                    </button>
                </div>
                <!-- /.mailbox-controls -->


                <div class="subjective-message with-border border-bottom">


                    @{
                        Medication first = null;
                        foreach (var t in Model.Medications)
                        {
                            if (t.RecordNo == Model.RecordNo)
                            {
                                first = t;
                                break;
                            }
                        }
                    }

                    @(new HtmlString(first != null ? first.MedicationDesc : String.Empty))

                </div>


                <!--- prescreiption -->



                <div class="mailbox-read-info pl-2 bg-info">
                    <h5 class="text-white">Prescription: </h5>

                </div>

                <!-- /.mailbox-read-info -->
                <div class="mailbox-controls with-border text-center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default btn-sm" id="prescription" data-toggle="tooltip" data-container="body" title="Add Prescription">
                            <i class="far fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Reply">
                            <i class="fas fa-reply"></i>
                        </button>
                        <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" data-container="body" title="Forward">
                            <i class="fas fa-share"></i>
                        </button>
                    </div>
                    <!-- /.btn-group -->
                    <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Print">
                        <i class="fas fa-print"></i>
                    </button>
                </div>
                <!-- /.mailbox-controls -->


                <div class="subjective-message with-border border-bottom  table-responsive p-0">

                    <table class="table table-striped table-hover table-sm">
                        <thead>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Task</th>
                            <th>Progress</th>
                            <th style="width: 40px">Label</th>
                        </tr>
                        </thead>
                        <tbody>
                        
                        <tr>
                            <td>1.</td>
                            <td>Update software</td>
                            <td>
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            </td>
                            <td><span class="badge bg-danger">55%</span></td>
                        </tr>

                        </tbody>

                    </table>


                </div>

            </div>

        </div>
    }
    else
    {
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="nav-icon fal fa-file-medical-alt"> </i>
                    Patient Record
                </h3>
                <div class="card-tools">

                    <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" id="return_to_list" data-container="body" title="Return to List">
                        <i class="fas fa-reply"></i>
                    </button>
                </div>
            </div>
            
            <div class="card-body p-0" style="min-height: 250px;">
                    
            </div>
        </div>
    }
}

